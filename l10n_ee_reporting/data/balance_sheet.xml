        <field name="style_id" ref="bs_ca_bank_and_cash_style" />
        <field name="type">num</field>
        <field name="compare_method">pct</field>
        <field
            name="expression"
        >bale['|', ('user_type_id', '=', ref('account.data_account_type_liquidity').id), ('tag_ids.id', '=', ref('l10n_ee_accounting.bs_bank_and_cash').id)]</field>
